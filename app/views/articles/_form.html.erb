<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <%= form_for(@article) do |f| %>
        <% if @article.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

            <ul>
            <% @article.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="card-block">
          <fieldset class="form-group">
            <%= f.text_field :title, class: 'form-control article-edit-title', placeholder: 'Awesome blog title' %>
          </fieldset>

          <fieldset class="form-group">
              <%= f.text_area :body, class: 'form-control', cols: 20, rows: 10, placeholder: 'Awesome content' %>
          </fieldset>

          <div class="actions">
            <%= f.submit btn_submit_text ||= 'Update Article', class: 'btn btn-primary' %>
            <% if btn_show ||= false %>
              <%= link_to 'Show', @article, class: 'btn btn-link' %>
            <% end %>
            <%= link_to 'Back', articles_path, class: 'btn btn-link' %>
            <% if btn_delete ||= false %>
              <%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure to delete this post?' }, class: 'btn btn-link' %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
